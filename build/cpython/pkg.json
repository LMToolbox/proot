{
    "comment": "Required by talloc",

    "download": {
        "branch": "v3.13.7",
        "url": "https://github.com/python/cpython.git"
    },
    "build": {
        "configure": [
            "LDFLAGS=\"$LDFLAGS -lz\"",
            "ac_cv_file__dev_ptmx=yes",
            "ac_cv_file__dev_ptc=no",
            "ac_cv_func_getentropy=no",
            "./configure",
            "--prefix=${PREFIX}",
            "--enable-shared",
            "--without-ensurepip",
            "--build=$(gcc -dumpmachine)", 
            "--host=$TARGET",
            "--with-build-python=$(which python3)"
        ],
       "make": [
            "make &&",
            "make install"
       ]
    }
}