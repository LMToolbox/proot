{
    "comment": "Python for PROOT",
    "download": {
        "branch": "v3.13.7",
        "url": "https://github.com/python/cpython.git"
    },
    "build": {
        "configure": [
            "export TARGET=$ARCH-linux-android LDFLAGS=\"-lz\" CFLAGS=\"-fPIC\" ac_cv_file__dev_ptmx=yes ac_cv_file__dev_ptc=no ac_cv_func_getentropy=no &&",
            "./configure",
            "--prefix=${PREFIX}",
            "--without-ensurepip",
            "--build=$(gcc -dumpmachine)",
            "--host=$TARGET",
            "--with-build-python=$(which python3)",
             "--disable-ipv6"
        ],
        "make": [
            "make &&",
            "make install"
        ]
    }
}
