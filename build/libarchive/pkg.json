{
    "comment": "Required by PROOT",

    "download": {
        "branch": "v3.8.1",

        "url": "https://github.com/libarchive/libarchive.git"
    },
    "build": {
        "configure": [
            "sh ./build/autogen.sh",
            "./configure",
            "--host=$TARGET --prefix=$PREFIX",
            "--without-xml2 --without-openssl --without-nettle --without-expat --without-iconv --without-bz2lib --without-lzma --without-lz4 --without-zstd --without-xattr --without-acl",
            "--disable-shared --enable-static"
        ],
       "make": [
            "make &&",
            "make install"
       ]
    }
}