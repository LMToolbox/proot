{
    "comment": "Required by PROOT",

    "download": {

        "url": "https://www.samba.org/ftp/talloc/talloc-2.4.3.tar.gz"

    },
    "build": {
        "configure": [
            "python -m venv .venv &&",
            ". .venv/bin/activate &&",
            "export PYTHON_VERSION='3.13' PYTAG='cpython313' pyext_PATTERN=\"%s.so\" PYTHON_LDFLAGS='-llog -ldl -lm -lpython3.13' CFLAGS=\"$CFLAGS -I$PREFIX/include/python3.13\" &&",
            "./configure",
            "--host=$TARGET --prefix=$PREFIX",
            "--cross-compile --cross-execute=\"qemu-$ARCH-static -L $TOOLCHAIN/sysroot\"",
            "--bundled-libraries=ALL"
        ],
       "make": [
           ". .venv/bin/activate &&",
            "make -j$(nproc) &&",
            "make install"
       ]
    }
}
