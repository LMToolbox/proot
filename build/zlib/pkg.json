{
    "comment": "Required by libarchive, python",

    "download": {
        "branch": "v1.3.1",

        "method": "git",
        "url": "https://github.com/madler/zlib.git"
    },
    "build": {
        "configure": [
            "export CFLAGS=\"-fPIC $CFLAGS\" &&",
            "./configure",
            "--prefix=${PREFIX}"
        ],
       "make": [
            "make -j$(nproc) &&",
            "make install"
       ]
    }
}
